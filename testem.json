{
    "framework": "mocha",
    "serve_files": [ "test/test.js" ],
    "test_page": "test/html/test.html",
    "src_files": [
        "js/**/*.js",
        "test/**/*.js"
    ],
    "launchers": {
        "Node": {
            "command": "mocha test/*util.js --reporter spec"
        }
    },
    "before_tests": "browserify test/*util.js -o test/test.js",
    "launch_in_dev": [ "chrome", "node" ]
}